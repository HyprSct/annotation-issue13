{
  "typeAcquisition": {
    "enable": true
  },
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "allowJs": true,
    "jsx":"react-jsx",
    "jsxImportSource": "react",
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@api/*": [
        "src/pages/api/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
    }
  }
}
